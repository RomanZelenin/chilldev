<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/kid_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/kid_name_text_view"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/kid_icon"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_account"
        app:layout_constraintStart_toStartOf="@id/kid_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/kid_name_text_view"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/kid_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:privateImeOptions="horizontalAlignment=center"
        android:textSize="40sp"
        android:hint="@string/name_hint"
        app:layout_constraintStart_toStartOf="@id/kid_icon"
        app:layout_constraintTop_toBottomOf="@id/kid_icon"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/next_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:text="@string/next_fragment_text_view"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>