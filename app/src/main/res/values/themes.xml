<resources>
    <style name="Theme.Chilldev" parent="@style/Theme.Leanback">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:buttonStyle">@style/BaseButton</item>
        <item name="colorPrimary">@color/red</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/blue</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/orange</item>

    </style>
    <style name="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
    </style>
    <style name="Text.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_heavy</item>
    </style>
    <style name="Text.SubTitle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.onButton">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.H4">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_h4</item>
    </style>
    <style name="Text.NextTitle">
        <item name="android:textColor">@color/gray_h4</item>
        <item name="textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_heavy</item>
    </style>
    <style name="KeyButton" parent="android:style/Widget.Material.Light.Button.Borderless.Small">
        <item name="android:textColor">@drawable/key_button_text</item>
        <item name="android:background">@drawable/key_button_bg_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
    </style>
    <style name="BaseButton" parent="android:style/Widget.Material.Light.Button">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/default_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/default_button_bg_selector</item>
    </style>

</resources>