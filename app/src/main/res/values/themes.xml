<resources>
    <style name="Theme.Chilldev" parent="@style/Theme.Leanback">
        <item name="android:windowBackground">@color/dark</item>


    </style>
    <style name="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
    </style>
    <style name="Text.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_heavy</item>
    </style>
    <style name="Text.SubTitle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.onButton">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.NextTitle">
        <item name="android:textColor">@color/gray_next</item>
        <item name="textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_heavy</item>
    </style>
    <style name="KeyButton" parent="android:style/Widget.Material.Light.Button.Borderless.Small">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
    </style>
    <style name="BaseButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="colorButtonNormal">@color/gray</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:stateListAnimator">@animator/button_animator</item>

    </style>

</resources>